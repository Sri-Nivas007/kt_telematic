extends layout

block content
  h2 Edit Asset Category

  // Edit Asset Category Form
  form(action=`/categories/${category.id}/update` method="POST")
    div.form-group
      label(for="name") Category Name
      input(type="text" id="name" name="name" class="form-control" value=category.name required)
    div.form-group
      label(for="description") Description
      input(type="text" id="description" name="description" class="form-control" value=category.description required)
    button(type="submit" class="btn btn-primary") Update Category
